# i3status configuration file.
# see "man i3status" for documentation.
# install: ~/.config/i3status/config

general {
  output_format = "i3bar"
  colors = true
  interval = 2
}

order += "ipv6"
#order += "run_watch DHCP"
#order += "run_watch VPN"
order += "wireless wlan0"
order += "ethernet eth0"
order += "disk /"
order += "battery 0"
order += "load"
order += "cpu_usage"
order += "cpu_temperature 0"order += "volume master"
order += "tztime local"

ipv6 {
  format_up = "IPv6: %ip"
  format_down = "IPv6"
}

wireless wlan0 {
  format_up = "W: %essid - %quality"
  format_down = "W: down"
}

ethernet eth0 {
  # if you use %speed, i3status requires root privileges
  format_up = "E: %ip (%speed)"
  format_down = "E: down"
}

battery 0 {
  threshold_type = "time"
  low_threshold = 10
  format = "%status: %percentage %remaining"
}

run_watch DHCP {
  pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
  pidfile = "/var/run/vpnc/pid"
}

tztime local {
  format = "%a %d/%m %H:%M:%S"
}

cpu_usage {
  format = "CPU: %usage"
}

cpu_temperature 0 {
  format = "T: %degreesÂ°C"
}

load {
  format = "LOAD: %1min"
}

disk "/" {
  format = "%free"
}

volume master {
  format = "V: %volume"
  device = "default"
  mixer = "Master"
  mixer_idx = 0
}
